<% provide(:title, 'Register') %>
<h1>Register</h1>

<div>
    <%= render 'shared/error_messages' %>
    <center><%= form_for(@user) do |f| %>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.email_field :email, class: "mdl-textfield__input" %>
        <%= f.label :email, "Email Address", class: "mdl-textfield__label" %>
      </div><br>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password, class: "mdl-textfield__input" %>
        <%= f.label :password, "Password", class: "mdl-textfield__label" %>
      </div><br>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
        <%= f.label :password_confirmation, "Password Confirmation", class: "mdl-textfield__label" %>
      </div><br>
      <style type="text/css">
        .mdl-textfield__label {
          color: #777;
        }
      </style>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :memberType, "Member Type", class: "mdl-textfield__label" %>
      <%= f.select :memberType, options_for_select([["Select One", ""], "Free", "Paid"]) %>
      </div>

      <div>
      <%= button_tag "Create my account", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent register-page-button", type: "submit", name: "commit" %>
      </div>
    <% end %></center>
</div>
