<link rel="stylesheet" href="https://storage.googleapis.com/code.getmdl.io/1.0.5/material.indigo-blue.min.css">
<script src="https://storage.googleapis.com/code.getmdl.io/1.0.5/material.min.js"></script>

<!-- Always shows a header, even in smaller screens. -->

  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <a href="/"><%= image_tag("logo-on-bar.png", width: "203", height: "40", class: "logo-on-bar") %></a>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>

        <% if logged_in? %>
          <div class="bar-user-info">
            <%= @user.email %><br>
            <li class="dropdown" style="list-style-type:none">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style = "color:white">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Up/Downgrade Membership", edit_user_path(current_user) %></li>
            </ul>
          </li>
          </div>
            <a rel="nofollow" data-method="delete" href="/logout"><%= button_tag "logout", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent", id: "register_button" %></a>

        <% else %>
            <%= form_for(:session, url: login_path) do |f| %>
              <%= f.email_field :email, class: "bar-txtlabel bar-margin", placeholder: "Email ..." %>
              <%= f.password_field :password, class: "bar-txtlabel bar-margin", placeholder: "Password ..." %>
              <%= button_tag "Login", class: "bar-margin mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent", id: "login_button" %>
              <%= f.label :remember_me, class: "checkbox" do %>
                <%= f.check_box :remember_me %>
                <span>Remember Me</span>
              <% end %>
            <% end %>
            <a href="/signup"><%= button_tag "Register", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent", id: "register_button" %></a>
        <% end %>

    </div>
  </header>
