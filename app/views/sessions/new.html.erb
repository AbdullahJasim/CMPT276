<% provide(:title, "Home") %>
<center><figure class="logo"></figure></center>
<style type="text/css">
  .logo {
  	margin-top: 70px;
  	background-size: 458px 90px;
    height: 90px;
    width: 458px;
    background-image: url("<%= image_path("logo.png") %>");
 }
</style>

<% $twitter.search("programming", result_type: "recent").take(3).each do |tweet| %>
  <script type="text/javascript">
    var para = document.createElement("p");
    var node = document.createTextNode("<%= escape_javascript (tweet.text) %>");
    para.appendChild(node);
    document.body.appendChild(para);
  </script>

<% end %>
